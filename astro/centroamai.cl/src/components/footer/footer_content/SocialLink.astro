---
import type { IconType } from "react-icons";

interface Props {
  link: string;
  icon: IconType;
}

const { icon: Icon, link } = Astro.props;
---

<a
  href={link}
  class="bg-white text-corange border-[1px] border-corange hover:bg-corange hover:text-white p-2 rounded-full duration-300 ease-in-out"
  target="_blank"
  rel="noopener noreferrer"
>
  <Icon />
</a>
