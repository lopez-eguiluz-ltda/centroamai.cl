---
import { services } from "@/utils/servicesSeed";
import ItemDescription from "./list/ItemDescription.astro";
import ServiceItem from "./list/ServiceItem.astro";
import type { AmaiService } from "@/utils/types";
---

<div class="flex flex-col items-start my-24">
  <div class="px-20 flex flex-col items-start gap-5">
    <h2
      class="text-corange text-xs border-[1px] border-corange rounded-3xl py-1 px-3"
    >
      Servicios
    </h2>

    <h2 class="text-lg sm:text-2xl lg:text-4xl font-bold text-white">
      Atenci√≥n de alta calidad para ti
    </h2>
  </div>

  <div
    class="bg-green-400 grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-5 items-start justify-items-center p-10 w-full"
  >
    {
      services.map((service: AmaiService) => (
        <ServiceItem icon={service.icon} title={service.service}>
          {service.descriptions.map((description: string) => (
            <ItemDescription description={description} />
          ))}
        </ServiceItem>
      ))
    }
  </div>
</div>
