---
import Layout from "../layouts/Layout.astro";

import { FaBaby, FaAppleWhole } from "react-icons/fa6";
import { PiStarFourFill } from "react-icons/pi";
import { MdBabyChangingStation } from "react-icons/md";
import FrontCarousel from "@/components/FrontCarousel";
---

<Layout title="Welcome to Astro.">
  <main>
    <nav class="fixed z-10">
      <h1 class="text-black text-lg">Felipe</h1>
    </nav>
    <FrontCarousel client:load />

    <div class="flex flex-col items-center gap-10 p-24">
      <h1 class="text-5xl text-white font-bold">
        Servicios disponibles
      </h1>
      <div class="grid grid-cols-3 gap-10 w-full">
        <div
          class="flex flex-col justify-start bg-white rounded-2xl shadow-lg shadow-gray-600 p-8 gap-4"
        >
          <FaBaby size={64} className="transform -translate-x-2 text-[#42A299]" />
          <h1 class="font-bold text-2xl antialiased">300+ UI Components</h1>
          <p class="text-slate-400">Servicios de Pediatría</p>
          <ul class="list-inside">
            <li class="flex items-center gap-2">
              <PiStarFourFill className="text-[#42A299]" /><p class="font-light">
                Pro lactancia materna
              </p>
            </li>
            <li class="flex items-center gap-2">
              <PiStarFourFill className="text-red-400 font-medium" /><p
                class="font-medium"
              >
                Pro lactancia materna
              </p>
            </li>
            <li class="flex items-center gap-2">
              <PiStarFourFill className="text-red-400 font-bold" /><p
                class="font-semibold"
              >
                Pro lactancia materna
              </p>
            </li>
            <li class="flex items-center gap-2">
              <PiStarFourFill className="text-red-400" /><p class="font-bold">
                Pro lactancia materna
              </p>
            </li>
          </ul>
        </div>

        <div class="flex flex-col justify-start bg-white rounded-lg p-8 gap-4">
          <MdBabyChangingStation
            size={64}
            className=" transform -translate-x-2"
          />
          <h1 class="font-bold text-2xl antialiased">
            Consejería en Lactancia Materna
          </h1>
          <p class="text-slate-400">Servicios de consejería materna</p>
          <ul class="list-inside">
            <li class="flex items-center gap-2">
              <PiStarFourFill className="text-red-400 flex-shrink-0" />
              <p class="truncate">
                Profesionales certificados en lactancia materna
              </p>
            </li>
            <li class="flex items-center gap-2">
              <PiStarFourFill className="text-red-400 flex-shrink-0" />
              <p class="truncate">Consejería pre & post natales</p>
            </li>
            <li class="flex items-center gap-2">
              <PiStarFourFill className="text-red-400 flex-shrink-0" />
              <p class="truncate">Asesoría en destete respetuoso</p>
            </li>
          </ul>
        </div>

        <div class="flex flex-col justify-start bg-white rounded-lg p-8 gap-4">
          <FaAppleWhole size={64} className=" transform -translate-x-2" />
          <h1 class="font-bold text-2xl antialiased">Nutrición</h1>
          <p class="text-slate-400">Servicios de nutrición y dietética</p>
          <ul class="list-inside">
            <li class="flex items-center gap-2">
              <PiStarFourFill className="text-red-400 flex-shrink-0" />
              <p class="truncate">Materno infantil</p>
            </li>
            <li class="flex items-center gap-2">
              <PiStarFourFill className="text-red-400 flex-shrink-0" />
              <p class="truncate">Nutrición vagana</p>
            </li>
            <li class="flex items-center gap-2">
              <PiStarFourFill className="text-red-400 flex-shrink-0" />
              <p class="truncate">Consejero de lactancia</p>
            </li>
          </ul>
        </div>
      </div>
    </div>
  </main>
</Layout>
